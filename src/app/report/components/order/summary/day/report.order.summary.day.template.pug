include ../../../../../layouts/view-helpers/common
+app-page-title
    .col-sm-4
        h2 Sales summary - daily
        ol.breadcrumb
            li
                a(routerLink='/') Home
            li.active
                | Reports
            li.active
                | Summary
            li.active
                strong  Daily

+app-page-content

    .row.clearfix
        .col-md-4.pull-right
            .input-group.m-b-md(daterangepicker='', (selected)='selectedDate($event)')
                span.form-control.uneditable-input(name='daterange')
                    | {{ date.start | date:'medium' }} - {{ date.end| date:'medium' }}
                span.input-group-btn
                    a.btn.btn-default(type='button')
                        i.glyphicon.glyphicon-calendar
    .row
        .col-md-6
            .ibox
                .ibox-title
                    h5 By count
                    .pull-right
                        .btn-group
                            a.btn.btn-xs.btn-white.active([routerLink]="['/report/sales/summary/day']") Day
                            a.btn.btn-xs.btn-white([routerLink]="['/report/sales/summary/month']") Monthly
                            a.btn.btn-xs.btn-white([routerLink]="['/report/sales/summary/year']") Annually
                .ibox-content(*ngIf != 'chartLabel?.length')
                    canvas(baseChart,
                    [colors]="chartAmountColors",
                    [options]='chartAmountOptions',
                    [datasets]='chartAmountData',
                    [labels]='chartLabel',
                    [legend]="'true'",
                    [chartType]="'line'")

                .ibox-content(*ngIf != '!chartLabel?.length')
                    p
                        | No data found

        .col-md-6

            .ibox
                .ibox-title
                    h5 By Amount
                    .pull-right
                        .btn-group
                            a.btn.btn-xs.btn-white.active([routerLink]="['/report/sales/summary/day']") Day
                            a.btn.btn-xs.btn-white([routerLink]="['/report/sales/summary/month']") Monthly
                            a.btn.btn-xs.btn-white([routerLink]="['/report/sales/summary/year']") Annually
                .ibox-content(*ngIf != 'chartLabel?.length')
                    canvas(baseChart,
                    [colors]="chartCountColors",
                    [options]='chartCountOptions',
                    [datasets]='chartCountData',
                    [labels]='chartLabel',
                    [legend]="'true'",
                    [chartType]="'line'")

                .ibox-content(*ngIf != '!chartLabel?.length')
                    p
                        | No data found

    .ibox
        .ibox-content(*ngIf != 'result?.length')
            table.table.table-striped.table-bordered
                thead
                    tr
                        th #
                        th Name
                        th Total
                        th Amount
                tbody
                    template(ngFor let-item [ngForOf] = "result"  let-i = "index")
                        tr
                            td {{i+1}}
                            td {{item._id}}
                            td {{item.total}}
                            td {{item.amount| currency: configService.currencyCode:true}}





